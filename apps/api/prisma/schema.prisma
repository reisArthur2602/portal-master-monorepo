generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  role      UserRole @default(MEMBER)

  @@map("users")
}

model Patient {
  id        String   @id @default(cuid())
  name      String
  cpf       String   @unique
  phone     String   @unique
  birthDate DateTime
  createdAt DateTime @default(now())

  @@map("patients")
}

enum UserRole {
  MEMBER
  ADMIN
}
